<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WeatherActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/global_white</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_pressed</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/WeatherActionBarStyle</item>
        <item name="actionMenuTextColor">@color/global_white</item>
    </style>

    <style name="WeatherActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_solid</item>
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="ActionBarTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <!-- The textColor property is backward compatible with the Support Library -->
        <item name="android:textColor">@color/global_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ab_text_size</item>

        <item name="textAllCaps">false</item>
    </style>

    <style name="BackgroundImage">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="WeatherDetailsTextViewPortrait">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="WeatherDetailsTextViewPortrait.WeatherDetailsTextViewLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="HorizontalDelimiterView">
        <item name="android:layout_width">@dimen/horizontal_separator_length</item>
        <item name="android:layout_height">@dimen/separator_width</item>
        <item name="android:background">@color/view_divider</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/medium_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_horizontal_margin</item>
    </style>

    <style name="VerticalDelimiterView">
        <item name="android:layout_width">@dimen/separator_width</item>
        <item name="android:layout_height">@dimen/vertical_separator_length</item>
        <item name="android:background">@color/view_divider</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/medium_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_vertical_margin</item>
    </style>
</resources>
